<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_cpu"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="8dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:id="@+id/item_cpu_total"
                        android:textSize="35sp"
                        android:text="Loading"
                        android:gravity="center_horizontal | center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:textSize="15sp"
                        android:text="CPU 총 사용량"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:id="@+id/item_cpu_sys"
                        android:textSize="35sp"
                        android:text="Loading"
                        android:gravity="center_horizontal|center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:textSize="15sp"
                        android:text="CPU 시스템 사용량"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:id="@+id/item_cpu_nice"
                        android:textSize="35sp"
                        android:text="Loading"
                        android:gravity="center_horizontal | center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:textSize="15sp"
                        android:text="CPU 우선순위 사용량"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:id="@+id/item_cpu_idle"
                        android:textSize="35sp"
                        android:text="Loading"
                        android:gravity="center_horizontal|center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:textSize="15sp"
                        android:text="CPU 유휴 사용량"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/item_cpu_num"
                android:textSize="30sp"
                android:text="CPU 1"
                android:gravity="center_horizontal|center_vertical"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>